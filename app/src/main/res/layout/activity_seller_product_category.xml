<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellerProductCategoryActivity">


    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inputs_design"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/Crops"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputs_design"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/crops" />


        <ImageView

            android:id="@+id/Agri_Hardware"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputs_design"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/agri_hardware" />

        <ImageView

            android:id="@+id/Fruits"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputs_design"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/fruits" />

        <ImageView

            android:id="@+id/Vegitables"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputs_design"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/vegitables" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/Seeds"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputs_design"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/seeds" />

        <ImageView

            android:id="@+id/Fertilizer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputs_design"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/fertilizer" />

        <ImageView

            android:id="@+id/Pesticides"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputs_design"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/pesticides" />


    </LinearLayout>

</RelativeLayout>